---
import { Image } from 'astro:assets';
import heroBg from '../assets/images/canva/hero-bg.jpg';
import philosophy1 from '../assets/images/canva/philosophy-1.jpg';
import philosophy2 from '../assets/images/canva/philosophy-2.jpg';
import facials from '../assets/images/canva/facials.jpg';
import massage from '../assets/images/canva/massage.jpg';
import treatments from '../assets/images/canva/treatments.jpg';
import facilities from '../assets/images/canva/facilities.jpg';
import logo from '../assets/images/canva/logo.svg';
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Great Nature Lounge - Wellness & Spa</title>
		<meta name="description" content="Entdecken Sie unsere luxuriösen Wellness- und Spa-Services für Entspannung und Erholung">
		<link href="https://fonts.googleapis.com/css2?family=Forum:wght@400&family=Klein:wght@400&display=swap" rel="stylesheet">
	</head>
	<body>
		<main>
			<!-- Hero Section -->
			<section class="hero">
				<div class="hero-background">
					<Image 
						src={heroBg} 
						alt="Wellness Background" 
						class="hero-image"
					/>
				</div>
				<div class="hero-content">
					<div class="hero-logo">
						<Image src={logo} alt="Great Nature Lounge Logo" class="logo-icon" />
					</div>
					<div class="hero-text">
						<p class="hero-subtitle">Book an Appointment</p>
						<h1 class="hero-title">Great Nature Lounge</h1>
						<h2 class="hero-main-title">Pamper and<br>indulge yourself</h2>
					</div>
				</div>
			</section>

			<!-- Our Philosophy Section -->
			<section class="philosophy-section">
				<div class="philosophy-content">
					<div class="philosophy-text">
						<h2 class="philosophy-title">Our Philosophy</h2>
						<p class="philosophy-description">
							Established in 2015, Great Nature Lounge is dedicated to giving our clients quality and luxury services to ensure their utmost relaxation and pampering to achieve balance, harmony, and renewal.
						</p>
					</div>
					<div class="philosophy-images">
						<div class="philosophy-image">
							<Image 
								src={philosophy1} 
								alt="Philosophy Image 1" 
								class="philosophy-img"
							/>
						</div>
						<div class="philosophy-image">
							<Image 
								src={philosophy2} 
								alt="Philosophy Image 2" 
								class="philosophy-img"
							/>
						</div>
					</div>
				</div>
			</section>

			<!-- Our Packages Section -->
			<section class="packages-section">
				<div class="packages-content">
					<div class="packages-header">
						<p class="packages-subtitle">We have a variety of services to ensure your wellness.</p>
						<h2 class="packages-title">Our Packages</h2>
					</div>
					
					<div class="packages-grid">
						<div class="package-item">
							<Image 
								src={facials} 
								alt="Facials" 
								class="package-image"
							/>
							<h3 class="package-title">Facials</h3>
						</div>
						
						<div class="package-item">
							<Image 
								src={massage} 
								alt="Massage" 
								class="package-image"
							/>
							<h3 class="package-title">Massage</h3>
						</div>
						
						<div class="package-item">
							<Image 
								src={treatments} 
								alt="Treatments" 
								class="package-image"
							/>
							<h3 class="package-title">Treatments</h3>
						</div>
					</div>
				</div>
			</section>

			<!-- Our Facilities Section -->
			<section class="facilities-section">
				<div class="facilities-content">
					<div class="facilities-header">
						<h2 class="facilities-title">Our Facilities</h2>
					</div>
					
					<div class="facilities-layout">
						<div class="facilities-grid">
							<div class="facility-item">
								<div class="facility-image">
									<Image 
										src={philosophy1} 
										alt="Suites & Treatment Rooms" 
										class="facility-round-image"
									/>
								</div>
								<h3 class="facility-title">Suites & Treatment Rooms</h3>
								<p class="facility-description">More than 50 relaxing treatment rooms to rest, renew, and recenter.</p>
							</div>
							
							<div class="facility-item">
								<div class="facility-image">
									<Image 
										src={philosophy2} 
										alt="World-class Equipment" 
										class="facility-round-image"
									/>
								</div>
								<h3 class="facility-title">World-class Equipment</h3>
								<p class="facility-description">Wide array of expert-recommended equipment for holistic wellness.</p>
							</div>
							
							<div class="facility-item">
								<div class="facility-image">
									<Image 
										src={facials} 
										alt="Sauna & Steam Rooms" 
										class="facility-round-image"
									/>
								</div>
								<h3 class="facility-title">Sauna & Steam Rooms</h3>
								<p class="facility-description">Experience a new sense of energy or excitement after each session.</p>
							</div>
						</div>
						
						<div class="facilities-main-image">
							<Image 
								src={facilities} 
								alt="Our Facilities" 
								class="facility-main-image"
							/>
						</div>
					</div>
				</div>
			</section>
		</main>
	</body>
</html>

<style>
	/* Reset and base styles */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: 'Klein', sans-serif;
		color: #1c1c1c;
		line-height: 1.6;
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Forum', serif;
	}

	/* Hero Section */
	.hero {
		position: relative;
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		color: #f8ccc3;
		overflow: hidden;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
	}

	.hero-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.hero-content {
		position: relative;
		z-index: 2;
		max-width: 800px;
		padding: 0 2rem;
	}

	.hero-logo {
		margin-bottom: 2rem;
	}

	.logo-icon {
		width: 60px;
		height: 60px;
		margin: 0 auto;
		display: block;
	}

	.hero-subtitle {
		font-size: 18px;
		margin-bottom: 1rem;
		font-weight: 400;
	}

	.hero-title {
		font-size: 30px;
		font-weight: 400;
		margin-bottom: 2rem;
		letter-spacing: -0.025em;
	}

	.hero-main-title {
		font-size: 100px;
		font-weight: 400;
		line-height: 1.1;
		margin: 0;
	}

	/* Philosophy Section */
	.philosophy-section {
		background-color: #263f28;
		color: #f8ccc3;
		padding: 4rem 0;
	}

	.philosophy-content {
		width: 100%;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		padding: 0 2rem;
	}

	.philosophy-title {
		font-size: 60px;
		font-weight: bold;
		margin-bottom: 2rem;
		text-align: center;
	}

	.philosophy-description {
		font-size: 20px;
		line-height: 1.57;
		text-align: center;
	}

	.philosophy-images {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.philosophy-img {
		width: 100%;
		height: 300px;
		object-fit: cover;
		border-radius: 8px;
	}

	/* Packages Section */
	.packages-section {
		background-color: #263f28;
		color: #f8ccc3;
		padding: 4rem 0;
	}

	.packages-content {
		width: 100%;
		padding: 0 2rem;
	}

	.packages-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.packages-subtitle {
		font-size: 20px;
		margin-bottom: 1rem;
	}

	.packages-title {
		font-size: 60px;
		font-weight: bold;
		margin: 0;
	}

	.packages-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.package-item {
		text-align: center;
	}

	.package-image {
		width: 100%;
		height: 300px;
		object-fit: cover;
		border-radius: 8px;
		margin-bottom: 1rem;
	}

	.package-title {
		font-size: 26px;
		font-weight: 400;
		margin: 0;
	}

	/* Facilities Section */
	.facilities-section {
		background-color: #263f28;
		color: #f8ccc3;
		padding: 4rem 0;
	}

	.facilities-content {
		width: 100%;
		padding: 0 2rem;
	}

	.facilities-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.facilities-title {
		font-size: 60px;
		font-weight: bold;
		margin: 0;
	}

	.facilities-layout {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: start;
	}

	.facilities-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	.facility-item {
		text-align: center;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.facility-image {
		margin-bottom: 1rem;
	}

	.facility-round-image {
		width: 120px;
		height: 120px;
		object-fit: cover;
		border-radius: 50%;
		border: 3px solid #f8ccc3;
	}

	.facility-title {
		font-size: 26px;
		font-weight: 400;
		margin-bottom: 1rem;
	}

	.facility-description {
		font-size: 16px;
		line-height: 1.4;
		text-align: center;
	}

	.facilities-main-image {
		text-align: center;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.facility-main-image {
		width: 100%;
		max-width: 500px;
		height: 400px;
		object-fit: cover;
		border-radius: 8px;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.hero-main-title {
			font-size: 60px;
		}

		.philosophy-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.philosophy-images {
			grid-template-columns: 1fr;
		}

		.packages-grid {
			grid-template-columns: 1fr;
		}

		.facilities-layout {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.facilities-grid {
			grid-template-columns: 1fr;
		}

		.philosophy-title,
		.packages-title,
		.facilities-title {
			font-size: 40px;
		}
	}
</style>
