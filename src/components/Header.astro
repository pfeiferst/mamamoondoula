---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">Ãœber mich</HeaderLink>
			<HeaderLink href="/schwangeren-massage">Schwangeren-Massage</HeaderLink>
		</div>
		<div class="contact-info">
			<a href="https://calendly.com/your-calendly-link" class="calendly-link" target="_blank" rel="noopener noreferrer">
				<span class="calendly-text">Termin buchen</span>
			</a>
			<a href="tel:0170-5580548" class="phone-link">
				<span class="phone-number">0170-5580548</span>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.contact-info {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-left: 2rem;
		padding: 0.5rem 0;
	}
	
	.phone-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		background: transparent;
		color: var(--black);
		padding: 1rem 1.5rem;
		border-radius: 30px;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		transition: all 0.3s ease;
		border: none;
		margin: 0.5rem;
	}
	
	.phone-link:hover {
		background: var(--accent);
		color: white;
		transform: translateY(-1px);
		padding: 1rem 2rem;
	}
	
	.phone-number {
		font-family: 'Quicksand', sans-serif;
		letter-spacing: 0.5px;
	}
	
	.calendly-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		background: transparent;
		color: var(--black);
		padding: 1rem 1.5rem;
		border-radius: 30px;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		transition: all 0.3s ease;
		border: none;
		margin: 0.5rem;
	}
	
	.calendly-link:hover {
		background: var(--accent);
		color: white;
		transform: translateY(-1px);
		padding: 1rem 2rem;
	}
	
	.calendly-text {
		font-family: 'Quicksand', sans-serif;
		letter-spacing: 0.5px;
	}
	
	@media (max-width: 720px) {
		.contact-info {
			margin-left: 1rem;
		}
		
		.calendly-link {
			padding: 0.75rem 1rem;
			font-size: 0.85rem;
			margin: 0.25rem;
		}
		
		.calendly-text {
			display: none;
		}
		
		.phone-link {
			padding: 0.75rem 1rem;
			font-size: 0.85rem;
			margin: 0.25rem;
		}
		
		.phone-number {
			display: none;
		}
	}
	
	@media (max-width: 480px) {
		.contact-info {
			display: none;
		}
	}
</style>
