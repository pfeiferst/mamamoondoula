<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.contact-info {
		display: flex;
		align-items: center;
	}
	
	.phone-link {
		background: #e74c3c;
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 25px;
		text-decoration: none;
		font-weight: bold;
		transition: background-color 0.3s ease;
	}
	
	.phone-link:hover {
		background: #c0392b;
		color: white;
	}
	
	@media (max-width: 720px) {
		.contact-info {
			display: none;
		}
	}
</style>
