	.contact-item {
		text-align: left;
		line-height: 1.6;
	}
	
	.contact-item a {
		color: #ecf0f1;
		text-decoration: none;
	}
	
	.contact-item a:hover {
		color: #e74c3c;
	}
	
	.footer-bottom {
		border-top: 1px solid #34495e;
		padding-top: 2rem;
		text-align: center;
	}
	
	.legal-links {
		margin-top: 1rem;
	}
	
	.legal-links a {
		color: #bdc3c7;
		text-decoration: none;
		margin: 0 0.5rem;
	}
	
	.legal-links a:hover {
		color: #e74c3c;
	}
	
	@media (max-width: 720px) {
		.contact-info {
			flex-direction: column;
			align-items: center;
		}
		
		.contact-item {
			text-align: center;
		}
	}
</style>
